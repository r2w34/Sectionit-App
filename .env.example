# Shopify App Credentials
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here

# App URL
SHOPIFY_APP_URL=https://your-app-url.com

# Scopes
SCOPES=read_themes,write_themes

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/section_store

# Session Secret (generate with: node -e "console.log(crypto.randomBytes(32).toString('base64'))")
SESSION_SECRET=your_session_secret_here

# Admin Panel
ADMIN_SECRET_KEY=your_admin_secret_key_here

# Environment
NODE_ENV=development

# Optional: File Upload (AWS S3 or similar)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=section-store-uploads

# Optional: Email Service (SendGrid, Mailgun, etc.)
EMAIL_FROM=noreply@sectionstore.com
SENDGRID_API_KEY=

# Optional: Analytics
GOOGLE_ANALYTICS_ID=
